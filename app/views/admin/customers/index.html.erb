
<div>
    
    <table>
        <h1>会員一覧</h1>
        
        <tr>
            <th>会員ID</th><th>氏名</th><th>メールアドレス</th><th>ステータス</th>
        </tr>
            <% @customers.each do |customer| %>
            
        <tr><td><%= customer.id %></td>
        
        <td><%= link_to admin_customer_path(customer.id), class: "btn btn-link" do %>
        <%= customer.last_name %><%= customer.first_name %>
        <% end %>
        </td>
        <td><%= customer.email %></td>
        
        <td><% if customer.is_active == true %>
           有効
           <% else %>
           退会
           <% end %>
        </td>
           <% end %>
        </tr>
    </table>
    <%= paginate @customers %>
</div>