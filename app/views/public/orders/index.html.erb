<h1>注文履歴一覧</h1>

<table>
    <% @orders.each do |orders| %>
    
    <th>注文日</th><th>配送先</th><th>注文商品</th><th>支払金額</th><th>注文詳細</th>
    
    <tr><td><%= orders.created_at.strftime("%Y/%m/%d %H: %M: %S") %></td>
    
    <td><%= orders.shipping_address %><%= orders.shipping_postal_code %></td>
    
    <td><% orders.order_details.each do |order_detail| %>
        <%= order_detail.item.name %>
        <% end %>
    </td>
    
    <td><%= orders.payment_amount %></td>
    <td><%= link_to "表示する",order_path(orders.id) %></td>
    </tr>
    <% end %>
</table>